#
# Hooks
# TODO: merge...
#

function on_start() {
    local srvs="$*"
    for srv in $srvs; do
        local do_start="start_$srv"
        assert_is_function "$do_start"
        $do_start
    done
}

function on_stop() {
    local srvs="$*"
    for srv in $srvs; do
        local do_stop="stop_$srv"
        assert_is_function "$do_stop"
        $do_stop
    done
}
