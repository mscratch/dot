#!/bin/bash

# TODO: make service expose nothing to public (except for caddy)
# TODO: config update (upgrade)

#
# resilio sync hooks
#

function start_rslsync() {
    cd "rslsync" ||
        panic "rslsync dir not found?"

    if [[ ! -f rslsync ]]; then
        # download the binary; TODO: check update?
        local output_file="rslsync_x64-2.7.3-1.tar.gz"
        wget "https://download-cdn.resilio.com/stable/linux-x64/resilio-sync_x64.tar.gz" -O $output_file
        tar -xf $output_file ||
            panic "untar rslsync file failed?"
        rm -fv $output_file
    fi

    if [[ ! -e ~/.config/systemd/user/rslsync.service ]]; then
        sed "s%\$RSLSYNC_PATH%$PWD%g" rslsync.service > ~/.config/systemd/user/rslsync.service
        # reload daemon
        systemctl --user daemon-reload
    fi

    if grep -q "\$PASSWORD" rslsync.conf; then
        # generate a password in-place; TODO: git?
        local passwd
        passwd="$(openssl rand -base64 16)"
        sed -i "s%\$PASSWORD%$(echo -n "$passwd" | sha256sum | awk '{print $1}')%g" rslsync.conf
        echo "KEEP_PASSWORD: \`$passwd\`"
    fi

    systemctl enable --user rslsync ||
        panic "systemctl enable rslsync failed?"
    systemctl start --user rslsync ||
        panic "systemctl start rslsync failed?"
}

function stop_rslsync() {
    systemctl stop --user rslsync ||
        panic "systemctl stop rslsync failed?"
}

#
# gitlab hooks
#

function start_gitlab() {
    cd "gitlab" ||
        panic "gitlab dir not found?"

    # check for soft link of config
    if [[ ! -L /etc/gitlab/gitlab.rb ]]; then
        # TODO: check link dst
        sudo systemctl stop gitlab-runsvdir ||
            panic "systemctl stop gitlab failed?"

        # link the config file to it
        sudo ln -sfv "$PWD/gitlab.rb" /etc/gitlab/gitlab.rb ||
            panic "link gitlab.rb failed?"
    fi

    # we're using the systemctl...
    sudo systemctl enable gitlab-runsvdir
    sudo systemctl start gitlab-runsvdir ||
        panic "systemctl start gitlab failed?"

    cd ..
}

function stop_gitlab() {
    sudo systemctl stop gitlab-runsvdir ||
        panic "systemctl stop gitlab failed?"
}

#
# miniflux hooks
#

function start_miniflux() {
    cd "miniflux" ||
        panic "miniflux dir not found?"

    # generating a password if not exists
    if [[ ! -f .env ]]; then
        cat > .env <<EOF
ADMIN_USERNAME=krnl
ADMIN_PASSWORD=$(head -c 4096 /dev/urandom | sha256sum -b | head -c 16)
EOF
        cat .env
    fi

    # up!
    docker-compose -p miniflux up -d ||
        panic "docker-compose up miniflux failed?"

    cd ..
}

function stop_miniflux() {
    cd "miniflux" ||
        panic "miniflux dir not found?"

    docker-compose -p miniflux down ||
        panic "docker-compose down miniflux failed?"

    cd ..
}

